                    @Html.DisplayFor(modelItem => pies.PiesNazwa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pies.Rasa.RasaNazwa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pies.Wiek.WiekNazwa)
                </td>
                <td>
                    @if (pies.PiesCzySuka)
                    {
                        <text>Suka</text>
                    }
                    else
                    {
                        <text>Samiec</text>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pies.PiesCzyDostepny)
                </td>
